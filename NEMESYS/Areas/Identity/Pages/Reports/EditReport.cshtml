@page "{id:int}"
@model NEMESYS.Areas.Identity.Pages.Reports.EditReportModel
@{
    ViewData["Title"] = "Edit Report";
}

<h2>Edit Report</h2>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <input type="hidden" asp-for="Report.ReportId" />

    <div class="form-group">
        <label asp-for="Report.DateOfReport"></label>
        <input asp-for="Report.DateOfReport" class="form-control" />
        <span asp-validation-for="Report.DateOfReport" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Report.Location"></label>
        <input asp-for="Report.Location" class="form-control" />
        <span asp-validation-for="Report.Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Report.DateSpotted"></label>
        <input asp-for="Report.DateSpotted" class="form-control" />
        <span asp-validation-for="Report.DateSpotted" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Report.TimeSpotted"></label>
        <input asp-for="Report.TimeSpotted" class="form-control" />
        <span asp-validation-for="Report.TimeSpotted" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Report.TypeOfHazard"></label>
        <select asp-for="Report.TypeOfHazard" class="form-control">
            <option value="Unsafe Act">Unsafe Act</option>
            <option value="Unsafe Condition">Unsafe Condition</option>
            <option value="Unsafe Equipment">Unsafe Equipment</option>
            <option value="Unsafe Structure">Unsafe Structure</option>
        </select>
        <span asp-validation-for="Report.TypeOfHazard" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Report.Description"></label>
        <textarea asp-for="Report.Description" class="form-control"></textarea>
        <span asp-validation-for="Report.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Report.Status"></label>
        <select asp-for="Report.Status" class="form-control">
            <option value="Open">Open</option>
            <option value="In Progress">In Progress</option>
            <option value="Closed">Closed</option>
        </select>
        <span asp-validation-for="Report.Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Report.ReporterEmail"></label>
        <input asp-for="Report.ReporterEmail" class="form-control" />
        <span asp-validation-for="Report.ReporterEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Report.ReporterPhone"></label>
        <input asp-for="Report.ReporterPhone" class="form-control" />
        <span asp-validation-for="Report.ReporterPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Upload New Photo (Optional)</label>
        <input type="file" name="Photo" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a asp-page="/Reports/ReportBoard" class="btn btn-secondary mt-3">Back to Reports Board</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
